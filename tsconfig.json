{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"]
    }
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "./node_modules/**",
    "./dist/**",
    "./.eslintrc.cjs"
  ]
}
